[dtnd]
name = <%= node['dtnd']['name'] %>
storage_path = /tmp/
db_path = /tmp/dtnd.db
transport = gridftp_simple
storage = basic
update_interval = 5
results_retries = 1
host = <%= node['dtnd']['host'] %>
listen_port = <%= node['dtnd']['listen_port'] %>
user = <%= node['dtnd']['user'] %>

[users]
cybera = secret
